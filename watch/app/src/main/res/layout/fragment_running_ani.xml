    <ImageView
        android:id="@+id/mate_cha1"
        android:layout_width="50dp"
        android:layout_height="66dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="95dp"
        android:elevation="6dp"
        android:rotation="-13" />

    <ImageView
        android:id="@+id/my_cha"
        android:layout_width="50dp"
